@page
@model LoginModel
@{
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserCreds.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UserCreds.UserName" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="UserCreds.UserName"></span>
        </div>
       
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserCreds.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="UserCreds.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="UserCreds.Password"></span>
        </div>

        <div class="row form-check mb-2">
            <div class="col-2">
                <input type="checkbox" asp-for="UserCreds.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="UserCreds.RememberMe"></label>
            </div>
            <div class="col">

            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
                
            </div>
        </div>
    </form>
</div>
